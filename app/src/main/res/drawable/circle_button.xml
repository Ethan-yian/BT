<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="50%p"
                        android:startColor="#E0E0E0"
                        android:centerColor="#D8D8D8"
                        android:endColor="#D0D0D0" />
                    <stroke
                        android:width="1.5dp"
                        android:color="#CCCCCC" />
                    <size
                        android:width="48dp"
                        android:height="48dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 默认状态 -->
    <item>
        <layer-list>
            <!-- 外层阴影 -->
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="100%p"
                        android:startColor="#20000000"
                        android:endColor="#00000000" />
                    <size
                        android:width="48dp"
                        android:height="48dp" />
                </shape>
            </item>

            <!-- 主要圆形背景 -->
            <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="50%p"
                        android:startColor="#F8F8F8"
                        android:centerColor="#EEEEEE"
                        android:endColor="#E0E0E0" />
                    <stroke
                        android:width="1.5dp"
                        android:color="#E0E0E0" />
                    <size
                        android:width="44dp"
                        android:height="44dp" />
                </shape>
            </item>

            <!-- 内部高光效果 -->
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="20dp">
                <shape android:shape="oval">
                    <gradient
                        android:angle="270"
                        android:startColor="#40FFFFFF"
                        android:endColor="#00FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>